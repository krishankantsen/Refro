
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
    id       Int     @id @default(autoincrement())
    email    String  @unique
    name     String
    password String
    companyName String
    role     String
    jobRole String
    expYear Int
    profilePic String
}
model Portfolio{
  id Int @id @default(autoincrement())
  userId Int
  link String
  porPic String
}

model Jobpost{
  id Int @id @default(autoincrement())
  userId Int
  companyName String
  jobTitle String
  jobDescription String
  jobSalary String
  skills String[]
  link String

}